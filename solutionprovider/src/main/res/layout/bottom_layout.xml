<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="256dp"
        android:layout_height="98dp"
        android:background="@drawable/btn_main_nav"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:text="导航"/>
    <TextView
        android:layout_width="164dp"
        android:layout_height="98dp"
        android:background="@drawable/btn_main_call"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:layout_marginLeft="5dp"
        android:text="电话"/>
    <TextView
        android:layout_width="164dp"
        android:layout_height="98dp"
        android:background="@drawable/btn_main_voice"
        android:gravity="center|bottom"
        android:layout_marginLeft="5dp"
        android:paddingBottom="10dp"
       />
    <TextView
        android:id="@+id/set_btn"
        android:layout_width="164dp"
        android:layout_height="98dp"
        android:background="@drawable/btn_main_setting"
        android:gravity="center|bottom"
        android:layout_marginLeft="5dp"
        android:paddingBottom="10dp"
        android:text="设置"/>
    <TextView
        android:layout_width="256dp"
        android:layout_height="98dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_main_service"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:text="云服务"/>

</LinearLayout>